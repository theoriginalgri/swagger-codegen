#ifndef SWAGGER_CONFIG_H_
#define SWAGGER_CONFIG_H_

namespace Swagger {

class SwaggerConfigData : public QSharedData
{
public:
    SwaggerConfigData()
    {
    }

    SwaggerConfigData(const SwaggerConfigData &other)
    : QSharedData(other)
    , host(other.host)
    , basePath(other.basePath)
    {
    }

    ~SwaggerConfigData()
    {
    }

    QString host;
    QString basePath;
};

class SwaggerConfig
{
public:
    SwaggerConfig();
    SwaggerConfig(const SwaggerConfig &other);
    SwaggerConfig(const QString &host, const QString &basePath);
    ~SwaggerConfig();

    static SwaggerConfig defaultConfiguration();

    void setHost(const QString &host);
    QString host() const;

    void setBasePath(const QString &basePath);
    QString basePath() const;

private:
    QSharedDataPointer<SwaggerConfigData> d;
};

}

#endif // SWAGGER_CONFIG_H_
